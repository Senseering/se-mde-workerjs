            "type": "node",
            "request": "launch",
            "name": "Debug[loadtest]",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229,
            "cwd": "${workspaceFolder}/examples/loadtest"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug[test]",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/src/test.js"
